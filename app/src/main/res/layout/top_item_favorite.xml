<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.exam.sample.viewmodel.base.BaseViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:paddingLeft="@dimen/margin_padding_10dp"
        android:paddingRight="@dimen/margin_padding_10dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_width"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/icon_favorite_avatar" />
        <TextView
            android:id = "@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/app_name"
            android:layout_marginBottom="@dimen/top_item_margin_bottom"
            style="@style/TextTitleStyle"/>

    </RelativeLayout>
</layout>